<Window x:Class="Content_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Management_System"
        xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        mc:Ignorable="d"
        Closing="Window_Closing">
    <Window.Resources>
        <Style
            x:Key="DefaultButtonStyle"
            TargetType="Button">
            <Setter
                Property="FontFamily"
                Value="Times New Roman"/>
            <Setter
                Property="FontSize"
                Value="16"/>
        </Style>
    </Window.Resources>
    <Canvas 
        Width="590"
        Height="350">
        <Canvas.Resources>
            <DropShadowEffect
                x:Key="MouseOverDropShadowEffect"
                Direction="320"
                Opacity="80"
                ShadowDepth="10"
                Color="Goldenrod"/>
        </Canvas.Resources>

        <Path
            Name="UIPath"
            Stroke="Goldenrod"
            StrokeThickness="2">
            <Path.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.1"/>
                    <GradientStop Color="Black"  Offset="0.95"/>
                    <GradientStop Color="#daa520" Offset="0.25"/>
                </LinearGradientBrush>
            </Path.Fill>
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="50,0">
                        <LineSegment Point="0,50"/>
                        <LineSegment Point="0,300"/>
                        <LineSegment Point="50,350"/>
                        <LineSegment Point="550,350"/>
                        <LineSegment Point="590,300"/>
                        <LineSegment Point="590,50"/>
                        <LineSegment Point="550,0"/>
                        <LineSegment Point="50,0"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <notifications:NotificationArea
          x:Name="WindowNotificationArea"
          Panel.ZIndex="1000"
          MaxItems="3"
          Position="TopRight"/>

        <DockPanel
            Canvas.Left="10"
            Canvas.Top="60"
            Width="570"
            Height="240" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="REPLAY" FontFamily="Times New Roman" FontSize="35" Margin="10,1,10,-17" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="66" Width="145"/>
            <StackPanel
                Margin="5"
                DockPanel.Dock="Bottom"
                Orientation="Horizontal">
                <Grid Width="388" Height="74">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="71*"/>
                        <ColumnDefinition Width="343*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        x:Name="UserNameLabel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Username:" Foreground="Black" FontFamily="Times New Roman" Height="25" Width="66" Grid.Row="1"/>
                    <Label
                        x:Name="PasswordLabel"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Password:" Foreground="Black" FontFamily="Times New Roman" Height="25" Width="62" />
                    <TextBox
                        x:Name="UserNameTextBox"
                        Grid.Column="1"
                        Grid.Row="1"
                        Width="198"
                        Height="28"
                        BorderThickness="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#daa520"
                        Foreground="Black"
                        BorderBrush="Goldenrod"
                        GotFocus="UserNameTextBox_GotFocus"
                        LostFocus="UserNameTextBox_LostFocus"
                        Text=""
                        TextWrapping="Wrap"/>
                    <PasswordBox
                        x:Name="PasswordTextBox"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="198"
                        Height="28"
                        Background="#daa520"
                        Foreground="Black"
                        BorderBrush="Goldenrod"
                        BorderThickness="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        GotFocus="PasswordTextBox_GotFocus"
                        LostFocus="PasswordTextBox_LostFocus"/>
                </Grid>
            </StackPanel>
        </DockPanel>
        <Button 
            x:Name="LogInButton"
            Canvas.Left="280" 
            Canvas.Top="236"
            Width="60"
            Height="22"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="Black"
            Foreground="Goldenrod"
            BorderBrush="Black"
            Click="LogInButton_Click"
            Cursor="Pen"
            ToolTip="Log in to the page"
            Content="Log in"
            FontFamily="Times New Roman">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect" Value="{StaticResource MouseOverDropShadowEffect}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button 
            x:Name="CloseButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Width="60"
            Height="22"
            Background="Black"
            Foreground="Goldenrod"
            BorderBrush="Black"
            Click="CloseButton_Click"
            Content="Close"
            Cursor="Pen"
            ToolTip="Exit the application"
            Canvas.Left="345" 
            Canvas.Top="236"
            FontFamily="Times New Roman">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect" Value="{StaticResource MouseOverDropShadowEffect}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label 
            x:Name="UserNameErrorLabel"
            Content=""
            Canvas.Left="450" 
            Canvas.Top="150" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="122"
            Foreground="Red" Height="26"/>
        <Label 
            x:Name="PasswordErrorLabel"
            Content="" 
            Canvas.Left="450" 
            Canvas.Top="185" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Width="122"
            Foreground="Red" Height="24"/>
    </Canvas>
</Window>
