<Page x:Class="Content_Management_System.Pages.AddArticlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
      xmlns:local="clr-namespace:Content_Management_System.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="650"
      Title="AddArticlePage"
      Background="Goldenrod">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.1"/>
                <GradientStop Color="Black"  Offset="0.95"/>
                <GradientStop Color="#daa520" Offset="0.25"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label
            x:Name="TitleLabel"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="209,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="ADD ARTICLE"
            Foreground="Goldenrod"
            FontFamily="Times New Roman"
            FontSize="34" Height="49" Width="232"/>
        <Label
            x:Name="NumOfArticleLabel"
            Grid.Row="1"
            Grid.Column="0"
            Height="56"
            Margin="10,0,0,0"
            FontFamily="Times New Roman"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Number of article:"
            FontSize="20" Width="158"/>
        <Label
            x:Name="PathToTheFileLabel"
            Grid.Row="2"
            Grid.Column="0"
            Height="56"
            Margin="10,-2,0,0"
            FontFamily="Times New Roman"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Path to the file: "
            FontSize="20" Width="138"/>
        <Label
            x:Name="ImageOfArticleLabel"
            Grid.Row="3"
            Grid.Column="0"
            Height="56"
            Margin="10,0,0,0"
            FontFamily="Times New Roman"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Image of an article: "
            FontSize="20" Width="171"/>
        <Label
            x:Name="TypeOfArticleLabel"
            Grid.Row="4"
            Grid.Column="0"
            Height="56"
            Margin="10,0,0,0"
            FontSize="20"
            FontFamily="Times New Roman"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Type of an article: " Width="161"/>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Width="210"
            Height="55"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <TextBox
                Height="28"
                Width="198"
                x:Name="NumOfArticleTextBox"
                GotFocus="NumOfArticleTextBox_GotFocus"
                LostFocus="NumOfArticleTextBox_LostFocus"
                Text=""
                TextWrapping="Wrap"
                Background="Black"
                BorderBrush="Black"/>
            <Label
                x:Name="NumErrorLabel"
                Height="30"
                Content=""
                Foreground="Red"/>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Width="420"
            Height="199"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <TextBox
                x:Name="PathToTheFileTextBox"
                Margin="5,4,0,0"
                Width="198"
                Height="28"
                HorizontalAlignment="Left"
                GotFocus="PathToTheFileTextBox_GotFocus"
                LostFocus="PathToTheFileTextBox_LostFocus"
                Text=""
                TextWrapping="Wrap"
                BorderBrush="Black"
                Background="Black" />

        </StackPanel>
        <DockPanel
            Grid.Row="2"
            Grid.Column="1"
            Width="410" Margin="0,41,12,10">
            <ToolBar
                Name="EditorToolBar"
                DockPanel.Dock="Top" Height="28"
                Margin="0,1,0,100" Background="Black">
                <ToggleButton
                    Name="BoldToggleButton"
                    Command="EditingCommands.ToggleBold"
                    ToolTip="Bold">
                    <fa5:SvgAwesome
                        Height="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Goldenrod"
                        Icon="Solid_Bold"/>
                </ToggleButton>
                <Separator/>
                <ToggleButton
                    Name="ItalicToggleButton"
                    Command="EditingCommands.ToggleItalic"
                    ToolTip="Italic">
                    <fa5:SvgAwesome
                        Height="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Goldenrod"
                        Icon="Solid_Italic"/>
                </ToggleButton>
                <Separator/>
                <ToggleButton
                    Name="UnderlineToggleButton"
                    Command="EditingCommands.ToggleUnderline"
                    ToolTip="Underline">
                    <fa5:SvgAwesome
                        Height="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Goldenrod"
                        Icon="Solid_Underline"/>
                </ToggleButton>
                <Separator/>
                <ComboBox
                    Name="FontSizeComboBox"
                    Width="60"
                    Background="Goldenrod"
                    IsTextSearchEnabled="True"
                    SelectionChanged="FontSizeComboBox_SelectionChanged"/>
                <Separator/>
                <ComboBox
                    Name="FontFamilyComboBox"
                    Width="120"
                    Background="Goldenrod"
                    IsTextSearchCaseSensitive="False"
                    IsTextSearchEnabled="True"
                    SelectionChanged="FontFamilyComboBox_SelectionChanged"/>
                <Separator/>
                <xctk:ColorPicker
                    Name="ColorPickerForeground"
                    Width="120"
                    Height="20"
                    Background="Goldenrod"
                    Foreground="Black"
                    DisplayColorAndName="True"
                    SelectedColorChanged="ColorPickerForeground_SelectedColorChanged"></xctk:ColorPicker>
                <Separator/>

            </ToolBar>
            <StatusBar DockPanel.Dock="Bottom" Margin="10,-20,10,6" Background="Goldenrod" Foreground="Black"  Height="25">
                <TextBlock
                    x:Name="wordCountTextBlock" HorizontalAlignment="Center"  Text="Number of words: "/>
            </StatusBar>
            <RichTextBox
                Name="EditorRichTextBox"
                Width="390"
                Margin="0,-90,0,23"
                Background="Goldenrod"
                Foreground="Black"
                BorderThickness="5"
                BorderBrush="Goldenrod"
                SelectionChanged="EditorRichTextBox_SelectionChanged"
                TextChanged="EditorRichTextBox_TextChanged">
                <FlowDocument>
                    <Paragraph>
                        <Run Name="Text" Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>

        </DockPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Width="350"
            Height="55"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <Button
                x:Name="ImageButton" Margin="7,0,0,0"  Width="150" Height="28" Background="Black" BorderBrush="Black" Foreground="Goldenrod" FontFamily="Times New Roman" Content="Search" HorizontalAlignment="Left" Click="ImageButton_Click"/>
            <Image Name="ImagePreview" Height="52" Width="144" Margin="160,-30,45,15"/>
            <Label
                x:Name="ImageErrorLabel"
                Height="30"
                Content=""
                Foreground="Red"/>

        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Width="210"
            Height="55"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <TextBox
                Height="28"
                Width="198"
                x:Name="TypeOfArticleTextBox"
                GotFocus="TypeOfArticleTextBox_GotFocus"
                LostFocus="TypeOfArticleTextBox_LostFocus"
                Text=""
                TextWrapping="Wrap"
                BorderBrush="Black"
                Background="Black"/>
            <Label
                x:Name="TypeOfArticleErrorLabel"
                Height="30"
                Content=""
                Foreground="Red"/>
        </StackPanel>

        <StackPanel
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            Orientation="Vertical" Margin="157,0,0,0" Width="336">
            <Rectangle
                Width="316"
                Height="8"
                Margin="10,5,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="DarkGoldenrod"/>
            <StackPanel
            Margin="5,5,5,0"
            Orientation="Horizontal">
                <Button
                x:Name="CreateArticleButton"
                BorderBrush="Black"
                Width="150"
                Height="28"
                Margin="5,0,0,5"
                FontFamily="Times New Roman"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="Black"
                Foreground="DarkGoldenrod"
                Click="CreateArticleButton_Click"
                Content="Add"
                Cursor="Pen"
                ToolTip="Create an article"/>

                <Button
                    x:Name="BackButton"
                    Width="150"
                    Height="28"
                    Margin="15,0,0,5"
                    FontFamily="Times New Roman"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    BorderBrush="Black"
                    Background="Black"
                    Foreground="DarkGoldenrod"
                    Click="BackButton_Click"
                    Content="Back"
                    Cursor="Pen"
                    ToolTip="Navigate Back"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
