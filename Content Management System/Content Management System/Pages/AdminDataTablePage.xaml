<Page x:Class="Content_Management_System.Pages.DataTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Content_Management_System.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" 
      d:DesignWidth="650"
      Title="DataTablePage">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <SolidColorBrush x:Key="BlackColor" Color="Black"/>
        <SolidColorBrush x:Key="LettersColor" Color="Goldenrod"/>
        <Style
            x:Key="DefaultButtonStyle"
            TargetType="Button"/>
        <Style 
            x:Key="MyColumnStyle"
            TargetType="DataGridCell">
            <Setter Property="Background" Value="{StaticResource BlackColor}"/>
        </Style>
        <Style
            x:Key="MyColumnStyle1"
            TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{StaticResource LettersColor}"/>

        </Style>
        <DropShadowEffect
            x:Key="MouseOverDropShadowEffect"
            Direction="320"
            Opacity="80"
            ShadowDepth="10"
            Color="Goldenrod"/>

    </Page.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.1"/>
                <GradientStop Color="Black"  Offset="0.95"/>
                <GradientStop Color="#daa520" Offset="0.25"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            x:Name="TitleLabel"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="DATA TABLE"
            Foreground="Goldenrod"
            FontFamily="Times New Roman"
            FontSize="34"/>
        <DataGrid
            x:Name="ArticlesDataGrid"
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="4"
            Grid.ColumnSpan="3"
            Margin="10,5,10,0"
            CanUserAddRows="false"
            ItemsSource="{Binding Articles}"
            AutoGenerateColumns="False"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.1"/>
                    <GradientStop Color="Black"  Offset="0.95"/>
                    <GradientStop Color="#daa520" Offset="0.25"/>
                </LinearGradientBrush>
            </DataGrid.Background>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn
                   Binding="{Binding IsCheck , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource MyColumnStyle}"/>
                <DataGridHyperlinkColumn
                    Header="Hyperlink"
                    Binding="{Binding Id}">
                    <DataGridHyperlinkColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <EventSetter Event="Hyperlink.Click" Handler="TextBlock_MouseLeftButtonDown"/>
                        </Style>
                    </DataGridHyperlinkColumn.ElementStyle>
                </DataGridHyperlinkColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image x:Name="ImageOfarticle" Source="{Binding ImageOfArticle}" Width="40" Height="40" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Header="Date"
                    Binding="{Binding DateOfAddition}">
                </DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        <StackPanel
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <Rectangle
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Width="330"
                Height="8"
                Margin="10,5,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="DarkGoldenrod"/>

            <StackPanel
                Margin="5,5,5,0"
                Orientation="Horizontal">
                <Button
                    x:Name="AddArticleButton"
                    Width="150"
                    Height="28"
                    Margin="5,0,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Background="Black"
                    BorderBrush="Black"
                    Foreground="DarkGoldenrod"
                    Click="AddArticleButton_Click"
                    Content="Add"
                    Cursor="Pen"
                    ToolTip="Add article"
                    FontFamily="Times New Roman"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

                <Button
                    x:Name="RemoveArticleButton"
                    Width="150"
                    Height="28"
                    Margin="29,0,5,5"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Background="Black"
                    Foreground="DarkGoldenrod"
                    BorderBrush="Black"
                    Click="RemoveArticleButton_Click"
                    Content="Remove"
                    Cursor="Pen"
                    ToolTip="Remove selected article"
                    FontFamily="Times New Roman"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
